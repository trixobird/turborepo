{
  "name": "graphql",
  "version": "1.0.0",
  "private": true,
  "description": "GraphQL Server",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon src/index.ts",
    "build": "tsc",
    "clean": "rm -rf dist node_modules .turbo",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "update": "pnpm update --latest && pnpm install && pnpm generate",
    "generate": "prisma generate"
  },
  "author": "",
  "license": "UNLICENCED",
  "devDependencies": {
    "@prisma/client": "^4.15.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "9.0.2",
    "@types/node": "20.3.1",
    "cross-env": "7.0.3",
    "eslint": "^8.42.0",
    "eslint-config-custom": "workspace:*",
    "nodemon": "^2.0.22",
    "prisma": "^4.15.0",
    "ts-node": "^10.9.1",
    "tsconfig": "workspace:*",
    "typescript": "5.1.3"
  },
  "dependencies": {
    "@graphql-tools/schema": "10.0.0",
    "@graphql-yoga/subscription": "4.0.0",
    "@pothos/core": "^3.30.0",
    "@pothos/plugin-prisma": "^3.52.0",
    "@pothos/plugin-relay": "^3.43.0",
    "@pothos/plugin-scope-auth": "^3.19.2",
    "@pothos/plugin-simple-objects": "^3.7.0",
    "bcryptjs": "^2.4.3",
    "graphql": "16.6.0",
    "graphql-scalars": "1.22.2",
    "graphql-yoga": "4.0.0",
    "jsonwebtoken": "^9.0.0",
    "logger": "workspace:*"
  }
}
