{
  "name": "graphql",
  "version": "1.0.0",
  "private": true,
  "description": "GraphQL Server",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon src/index.ts",
    "build": "tsc",
    "clean": "rm -rf dist node_modules .turbo",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "update": "pnpm update --latest && pnpm install && pnpm generate",
    "generate": "prisma generate",
    "codegen": "graphql-codegen-esm --config src/schema/codegen.ts"
  },
  "author": "",
  "license": "UNLICENCED",
  "devDependencies": {
    "@babel/core": "^7.21.5",
    "@graphql-codegen/cli": "^3.3.1",
    "@graphql-codegen/client-preset": "^3.0.1",
    "@prisma/client": "^4.13.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "9.0.2",
    "@types/node": "18.16.3",
    "cross-env": "7.0.3",
    "eslint": "^8.39.0",
    "eslint-config-custom": "workspace:*",
    "nodemon": "^2.0.22",
    "prisma": "^4.13.0",
    "ts-node": "^10.9.1",
    "tsconfig": "workspace:*",
    "typescript": "5.0.4"
  },
  "dependencies": {
    "@graphql-tools/schema": "9.0.19",
    "@graphql-yoga/subscription": "3.1.0",
    "@pothos/core": "^3.29.0",
    "@pothos/plugin-prisma": "^3.47.2",
    "@pothos/plugin-relay": "^3.41.0",
    "@pothos/plugin-scope-auth": "^3.19.0",
    "@pothos/plugin-simple-objects": "^3.6.7",
    "bcryptjs": "^2.4.3",
    "graphql": "16.6.0",
    "graphql-scalars": "1.21.3",
    "graphql-yoga": "3.9.1",
    "jsonwebtoken": "^9.0.0",
    "logger": "workspace:*"
  }
}
